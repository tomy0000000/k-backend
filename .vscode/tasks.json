// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ—ï¸ Build Docker image",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "build"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ğŸš€ Launch development Docker Compose stack",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "up",
        "--detach"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ğŸ§ª Run Backend Tests",
      "type": "shell",
      "command": "poetry",
      "args": [
        "run",
        "scripts/test.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "ğŸ˜ Create Migration Script",
      "type": "shell",
      "command": "docker",
      "args": [
        "compose",
        "exec",
        "api",
        "alembic",
        "revision",
        "--autogenerate",
        "-m",
        "${input:migrationDescription}"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "ğŸ¤– Create client",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/built_client.sh",
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "inputs": [
    {
      "type": "promptString",
      "id": "migrationDescription",
      "description": "Description of this migration",
      "default": "some description"
    }
  ]
}
